{
  "manifest_version": 3,
  "name": "Element Hider",
  "version": "1.0",
  "description": "Hide specific HTML elements on websites",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Element Hider"
  }
}